<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skyweednet.weedlook">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_blur_on_white_48dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.login.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="WeedLook"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.main.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Mis Muestras"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.add.AddSampleActivity"
            android:label="Registrar Muestra"></activity>
        <activity
            android:name=".views.main.EditSamplesActivity"
            android:label="Editar Muestra"></activity>
        <activity
            android:name=".views.tastings.TastingsActivity"
            android:label="@string/title_activity_samples_tastings"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>